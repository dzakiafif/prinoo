{% extends 'layouts/layouts.twig' %}

{% block content %}
    <section id="registration">
        <div class="container">
            <div class="form-wrapper">
                <h2>Pendaftaran</h2>
                <p>&nbsp;</p>
                {{ form_start(form,{'method':'POST','action':'','attr':{'class':'form-horizontal'}}) }}
                <div class="form-group">
                    <label for="email">E-mail</label>
                    {{ form_row(form.email) }}
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="first-name">Nama Depan</label>
                            {{ form_row(form.firstName) }}
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="last-name">Nama Belakang</label>
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="no-telp">No. Telepon</label>
                    {{ form_row(form.noHp) }}
                </div>
                <div class="form-group">
                    <label for="jenis-kelamin">Jenis Kelamin</label>
                    {{ form_row(form.jenisKelamin) }}
                </div>
                <div class="form-group">
                    <label for="alamat">Alamat</label>
                    {{ form_row(form.alamat) }}
                </div>
                <div class="form-group">
                    <label for="password">Kata sandi</label>
                    {{ form_row(form.password) }}
                </div>
                {{ form_row(form._token) }}
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" required>
                        Saya setuju dengan <a href="#" title="Kebijakan">Kebijakan dan Ketentuan</a> yang telah ditetapkan oleh pihak penyedia layanan.
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Daftar" class="form-control btn btn-yellow">
                </div>
            </div>
        </div>
    </section>

{% endblock %}