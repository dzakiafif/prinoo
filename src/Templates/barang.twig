{% extends 'layouts/dashboard_layouts.twig' %}

{% block dashboard_content %}
    <div class="container text-center pt25">
        <p class="form-title">Masukkan Barang</p>

        <p>&nbsp;</p>

        <div class="order-wrapper">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nama-barang">Nama Barang</label>
                    <input type="text" class="form-control" name="nama-barang" id="nama-barang">
                </div>
                <div class="form-group">
                    <label for="description">Deskripsi</label>
                    <textarea class="form-control" name="description" id="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="barang-property">Upload Gambar</label>
                    <input type="file" class="form-control" name="barang-property" id="barang-property">
                </div>
                <label>Karakteristik Barang</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="barang-char[]" value="0">
                        Jumlah
                    </label>
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="barang-char[]" value="1">
                        Dimensi
                    </label>
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="barang-char[]" value="2">
                        Kualitas
                    </label>
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="barang-char[]" value="3">
                        Bahan
                    </label>
                </div>
                <p>&nbsp;</p>
                <div class="form-group">
                    <input type="submit" class="btn btn-red btn-block" value="Submit">
                </div>

            </form>
        </div>
    </div>

{% endblock %}