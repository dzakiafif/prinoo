<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Welcome</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
		<link href="https://fonts.googleapis.com/css?family=Fira+Sans:300,400,600,700|Lato:300,400,700|Pacifico|Kaushan+Script" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
		<link rel="stylesheet" type="text/css" href="{{ app.asset_path }}/../assets/css/global.css">
		
	</head>
	<body>
		<div class="container-fluid dashboard">
			<div class="row h100vh">
				<div class="col-md-2 asphalt p0">
					<div class="dashboard__brand">
						<p>Prinoo <small>beta</small></p>
					</div>
					<div class="left-nav">
						{% if ((app.session.get('role')['value']) == '0') %}
							<a href="{{ ('/admin/home') }}" title="" class="item active">DASHBOARD</a>
							<a href="#" title="" class="item">INPUT</a>
							<a href="{{ ('/admin/profile-user') }}" title="" class="item">PROFIL</a>
							<a href="{{ ('/admin/list-user') }}" title="" class="item">USER</a>
							<a href="{{ ('/admin/list-barang') }}" title="" class="item">BARANG</a>
						{% elseif ((app.session.get('role')['value']) == '1') %}
							<a href="{{ ('/home') }}" title="" class="item active">DASHBOARD</a>
							<a href="{{ ('/profile-user') }}" title="" class="item">PROFIL</a>
							<a href="#" title="" class="item">ORDER</a>
						{% else %}
							<a href="{{ ('/home') }}" title="" class="item active">DASHBOARD</a>
							<a href="{{ path('create_order') }}" title="" class="item">ORDER</a>
							<a href="{{ ('/profile-user') }}" title="" class="item">PROFIL</a>

						{% endif %}
					</div>
				</div>
				<div class="col-md-8 midnight">
					{% block dashboard_content %}{% endblock %}
				</div>
				<div class="col-md-2 asphalt p0">
					<div class="dashboard__account">
						<div class="dashboard__account-image">
							<img src="{{ app.asset_path }}/assets/img/people/peop1.png" alt="" class="img-dashboard">
						</div>
						<p class="dashboard__account-name">{{ app.session.get('firstName')['value'] }}&nbsp;{{ app.session.get('lastName')['value'] }}</p>
						<p class="dashboard__account-role">
							{% if((app.session.get('role')['value'])=='0') %}
								Admin
							{% elseif ((app.session.get('role')['value'])=='1') %}
								Vendor
							{% else %}
								Member
							{% endif %}
						</p>
					</div>
					<a href="{{ ('/logout') }}" title="" class="btn btn-red btn-block btn-bottom">Logout</a>
				</div>
			</div>
		</div>
		
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>

	{% block javascript %}
	{% endblock %}
	</body>
</html>